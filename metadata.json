{
  "name": "muppet-base",
  "version": "0.5.1",
  "author": "Scotty Logan <scotty@catbert.net>",
  "summary": "Base configuration for a muppet machine",
  "license": "MIT",
  "source": "https://github.com/scottylogan/muppet-base.git",
  "project_page": "https://github.com/scottylogan/muppet-base",
  "issues_url": "https://github.com/scottylogan/muppet-base/issues",

  "operatingsystem_support": [
    {
      "operatingsystem": "Debian",
      "operatingsystemmajrelease": [ "8", "9" ]
    },
    {
      "operatingsystem": "Ubuntu",
      "operatingsystemmajrelease": [ "16.04", "18.04" ]
    }
  ],

  "requirements": [
    { "name": "puppet", "version_requirement": "5.x" }
  ],

  "dependencies": [
    { "name": "puppetlabs-stdlib",    "version_requirement": ">= 4.25.0" },
    { "name": "puppetlabs-apt",       "version_requirement": ">= 5.0.0" }
  ]
}
